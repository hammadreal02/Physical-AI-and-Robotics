<?xml version="1.0"?>
<robot name="simple_arm">
  <link name="world"/>

  <joint name="fixed_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Add a Gazebo plugin for ROS2 control if needed -->
  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <robot_namespace>/simple_arm</robot_namespace>
      <!-- This parameter path might need adjustment based on your ROS2 setup -->
      <parameters>$(find gazebo_ros2_control_demos)/config/rrbot_controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
